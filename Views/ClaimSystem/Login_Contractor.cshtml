@model ClaimManagementSystem.Models.Contractor

@{
    ViewData["Title"] = "Contractor Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contractor Login</h2>

<div class="form-container">
    <form asp-action="Login_Contractor" method="post">
        <div class="form-group">
            <label for="typeOfContractor">Type of Contractor</label>
            <select name="typeOfContractor" class="form-control" required>
                <option value="">Select Type</option>
                <option value="Project Coordinator">Project Coordinator</option>
                <option value="Academic Manager">Academic Manager</option>
            </select>
            <span asp-validation-for="TypeOfContractor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContractorID">Contractor ID</label>
            <input type="number" asp-for="ContractorID" class="form-control" required />
            <span asp-validation-for="ContractorID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContractorEmail">Contractor Email</label>
            <input type="email" asp-for="ContractorEmail" class="form-control" required />
            <span asp-validation-for="ContractorEmail" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>

<div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            Invalid login attempt. Please check your details and try again.
        </div>
    }
</div>

<a href="@Url.Action("Login", "ClaimSystem")" class="button-link">Back to User Selection</a>
